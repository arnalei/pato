@page
@model IndexModel
@{
    Layout = "LoginLayout";
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Responsive Login Form - Coding Power</title>
</head>
<body>

    <div class="container">
        <div class="title">
            <h2>Login</h2>
        </div>
        <form method="post">
            <div class="field">
                <i class="fa fa-envelope"></i>
                <input asp-for="acc.username" type="email" placeholder="Email">
            </div>
            <div class="field">
                <i class="fa fa-lock"></i>
                <input asp-for="acc.password" type="password" placeholder="Password">
            </div>
            <div class="forgot">
                <a href="#">Forgot Password ?</a>
            </div>
            <div class="login">
                <button asp-page-handler="Login" type="submit">Login</button>
            </div>
            <div class="signup">
                Don't have an account ? <a href="/Create">Signup Here</a>
            </div>
        </form>
    </div>

</body>
</html>


