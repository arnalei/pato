@page
@model MartinezFinalProject.Pages.GetInfoModel
@{
}
<style>



    * {
        box-sizing: border-box;
    }

    body {
        margin: 30px;
        font-family: Arial, sans-serif;
        background-color: #f5f5dc;
    }

    form {
        border: 1px solid #333;
        padding: 20px;
        max-width: 400px;
        margin: 0 auto;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .input-group {
        display: flex;
        margin-bottom: 10px;
        align-items: center;
    }

    label {
        width: 100px;
        font-weight: bold;
    }

    input,
    select,
    textarea {
        flex: 1;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size: 1em;
    }

    .submit-group {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
    }

    button {
        width: 120px;
        margin: 0 auto;
        background-color: #333;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #555;
        }
</style>

<form method="post">
    <div class="input-group">
        <label for="name">Name</label>
        <input asp-for="character.CharacterName" id="name"
               placeholder="Enter name"
               required="required" />
    </div>
    <div class="input-group">
        <label for="age">Age</label>
        <input asp-for="character.Age" id="age"
               placeholder="Enter age" />
    </div>
    <div class="input-group">
        <label for="gender">Gender</label>
        <input asp-for="character.Gender" id="gender"
               placeholder="Enter gender" />
    </div>

    <div class="input-group">
        <label for="description">Description</label>
        <input asp-for="character.Description" id="description"
               type="text"
               placeholder="Enter description" />
    </div>

    <div class="submit-group">
        <button asp-page-handler="Submit" type="submit">Create New Character</button>
    </div>
</form>
