@page
@model AJJK_Planner.Pages.LoginModel
@{
    Layout = "LoginLayout";
}
<!DOCTYPE html>
<!-- Created By CodingNepal -->
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <!-- <title>Neumorphism Login Form UI | CodingNepal</title> -->
    <link rel="stylesheet" href="/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
    <div class="content">
        <div class="text">
            Login Form
        </div>
        <form method="post" asp-page-handler="Login">
            <div class="field">
                <input asp-for="acc.username" type="text" required>
                <span class="fas fa-user"></span>
                <label>Email or Phone</label>
            </div>
            <div class="field">
                <input asp-for="acc.password" type="password" required>
                <span class="fas fa-lock"></span>
                <label>Password</label>
            </div>
            <div class="forgot-pass">
                <a href="#">Forgot Password?</a>
            </div>
            <button>Sign in</button>
            <div class="sign-up">
                Not a member?
                <a href="/Create">signup now</a>
            </div>
        </form>
    </div>
</body>
</html>